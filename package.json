{
  "name": "raxee-bot",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "ts-node bin/bot.ts",
    "generate-models": "prisma generate",
    "prepare": "husky install",
    "compile": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts .",
    "lint:ci": "DEBUG=eslint:cli-engine eslint --ext .js,.ts .",
    "prettier": "prettier --write '**/*.(ts|js|md|json)'",
    "prettier:ci": "prettier --check '**/*.(ts|js|md|json)'",
    "test": "jest --coverage",
    "test:ci": "jest"
  },
  "dependencies": {
    "@prisma/client": "^4.12.0",
    "async-pause": "^1.0.0",
    "date-fns": "^2.29.3",
    "dotenv-flow": "^3.2.0",
    "grammy": "^1.15.3",
    "grammy-reply-with-markdown": "^1.0.0",
    "remeda": "^1.12.0",
    "telegram-md": "^1.2.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^16.18.23",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "prisma": "^4.12.0",
    "ts-jest": "^29.1.0"
  },
  "eslintConfig": {
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "overrides": [
      {
        "files": "*.test.ts",
        "rules": {
          "@typescript-eslint/no-explicit-any": "off"
        }
      }
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "!**/node_modules/**",
      "**/*.ts",
      "!bin/*.ts"
    ]
  },
  "lint-staged": {
    "**/*.(js|ts)": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.(md|json)": "prettier --write"
  }
}
